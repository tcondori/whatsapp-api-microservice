# Variables de entorno para WhatsApp API Microservice
# Copiar a .env y configurar con valores reales

# Configuración de Flask
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=true

# Configuración de WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_BUSINESS_ID=your-business-id
WHATSAPP_API_VERSION=v18.0

# Configuración de Webhooks
WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
WEBHOOK_SECRET=your-webhook-secret

# Configuración de líneas de mensajería
# Opción 1: JSON (recomendado para múltiples líneas)
MESSAGING_LINES=[]

# Opción 2: Variables individuales (para línea única)
LINE_1_PHONE_NUMBER_ID=your-phone-number-id
LINE_1_DISPLAY_NAME=Línea Principal
LINE_1_PHONE_NUMBER=+1234567890
LINE_1_WEBHOOK_URL=https://your-domain.com/api/v1/webhooks/line_1
LINE_1_IS_ACTIVE=true
LINE_1_MAX_DAILY_MESSAGES=1000

DEFAULT_LINE_ID=line_1

# Base de datos
# Desarrollo (SQLite)
DEV_DATABASE_URL=sqlite:///whatsapp_dev.db

# Producción (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/whatsapp_api

# Redis
REDIS_URL=redis://localhost:6379

# API Keys válidas (separadas por coma)
VALID_API_KEYS=dev-api-key,test-key-123

# Configuración de CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Logging
LOG_LEVEL=INFO

# Puerto de la aplicación
PORT=5000
